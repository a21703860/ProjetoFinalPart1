<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/filme_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/filme_fotografia_image_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/placeholder_image" />

        <TextView
            android:id="@+id/nome_filme_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/filme_fotografia_image_view"
            android:layout_toEndOf="@id/filme_fotografia_image_view"
            android:text="Nome do Filme"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/cinema_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nome_filme_edit_text"
            android:layout_toEndOf="@id/filme_fotografia_image_view"
            android:text="Nome do Cinema"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:visibility="gone" />

        <TextView
            android:id="@+id/avaliacao_valor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cinema_edit_text"
            android:layout_toEndOf="@id/filme_fotografia_image_view"
            android:text="Avaliação"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:visibility="gone" />

        <TextView
            android:id="@+id/data_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/avaliacao_valor"
            android:layout_toEndOf="@id/filme_fotografia_image_view"
            android:text="Data de visualização"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <TextView
            android:id="@+id/observacoes_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/data_edit_text"
            android:layout_toEndOf="@id/filme_fotografia_image_view"
            android:text="Observações"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:visibility="gone" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
