<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProjetoFinalPart1" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondColor</item>
        <item name="colorSecondaryVariant">@color/secondColor</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="ToolbarTheme" parent="Theme.ProjetoFinalPart1">
        <item name="android:background">@color/primaryColor</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>
    <style name="TextColorTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="SeekBarStyle" parent="Widget.AppCompat.SeekBar">
        <item name="colorAccent">@color/primaryColor</item>
    </style>
</resources>